<configuration>
    <!-- Define o formato do log -->
    <appender name="FILE" class="ch.qos.logback.core.FileAppender">
        <file>src/main/resources/logs/aplicacao.log</file> <!-- Caminho para o arquivo de log -->
        <append>True</append>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Define que todos os logs serÃ£o gravados no arquivo -->
    <root level="info">
        <appender-ref ref="FILE"/>
    </root>
</configuration>