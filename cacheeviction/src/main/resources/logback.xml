<configuration>
    <!-- Define o formato do log -->
    <appender name="FILE" class="ch.qos.logback.core.FileAppender">
        <file>src/main/resources/logs/aplicacao.log</file> <!-- Caminho para o arquivo de log -->
        <append>false</append> <!-- Faz com que o arquivo seja sobrescrito a cada reinício -->
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Define que todos os logs serão gravados no arquivo -->
    <root level="info">
        <appender-ref ref="FILE"/>
    </root>
</configuration>